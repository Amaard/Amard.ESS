{
  "ConnectionStrings": {
    "DatabaseConnectionString": "Host=ess.postgres;Port=5432;Database=amard_ess;Username=postgres;Password=postgres;SSL Mode=Prefer;Trust Server Certificate=true;Command Timeout=30;Pooling=true;Minimum Pool Size=5;Maximum Pool Size=100",
    "IafDatabaseConnectionString": ""
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "Jwt": {
    "Issuer": "amard-ess.api",
    "Audiance": "amard-ess.app",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationDays": 30,
    "Key": "REPLACE_WITH_SECURE_JWT_KEY_FROM_SECRETS"
  },
  "Encryption": {
    "Key": "REPLACE_WITH_SECURE_ENCRYPTION_KEY_FROM_SECRETS"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    },
    "File": {
      "Path": "logs/ess-api-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760,
      "RollOnFileSizeLimit": true
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      },
      "Https": {
        "Url": "https://0.0.0.0:8081"
      }
    }
  }
}